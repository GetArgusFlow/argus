{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ParseResponse",
  
  "oneOf": [
    { "$ref": "#/definitions/specObject" },
    { "$ref": "#/definitions/specificationsList" }
  ],

  "definitions": {
    "specObject": {
      "type": "object",
      "properties": {
        "category": {
          "type": "string"
        },
        "details": {
          "oneOf": [
            {
              "type": "array",
              "items": { "type": "string" }
            },
            {
              "type": "object",
              "patternProperties": {
                "^.*$": {
                  "oneOf": [
                    { "type": "string" },
                    { "$ref": "#/definitions/specObject" }
                  ]
                }
              }
            }
          ]
        }
      },
      "required": ["category", "details"]
    },
    "specificationsList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/specObject"
      }
    }
  }
}